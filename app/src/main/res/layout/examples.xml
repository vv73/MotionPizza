<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >

    <TextView
        android:id="@+id/textViewJ"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginStart="150dp"
        android:layout_marginTop="150dp"
        android:background="@drawable/circle_blue"
        android:gravity="center"
        android:text="Java"
        android:textColor="@color/white"
        android:textSize="40dp"
        app:layout_constraintBottom_toBottomOf="@id/textViewO"
        app:layout_constraintEnd_toEndOf="@+id/textViewO"
        app:layout_constraintStart_toStartOf="@+id/textViewO"
        app:layout_constraintTop_toTopOf="@+id/textViewO" />

    <TextView
        android:id="@+id/textViewO"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@drawable/circle_green"
        android:gravity="center"
        android:text="ООП"
        android:textColor="@color/white"
        android:textSize="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewA"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="150dp"
        android:layout_marginEnd="150dp"
        android:background="@drawable/circle_red"
        android:gravity="center"
        android:text="Android"
        android:textColor="@color/white"
        android:textSize="40dp"
        app:layout_constraintBottom_toBottomOf="@+id/textViewO"
        app:layout_constraintEnd_toEndOf="@+id/textViewO"
        app:layout_constraintStart_toStartOf="@+id/textViewO"
        app:layout_constraintTop_toTopOf="@+id/textViewO" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/groupITSchool"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="textViewA,textViewO,textViewJ" />

    <TextView
        android:id="@+id/textViewCentre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:text="."
        app:layout_constraintBottom_toTopOf="@+id/guideline2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Clock" />

    <TextView
        style="@style/clockDigit"
        android:text="1"
        app:layout_constraintCircleAngle="30" />

    <TextView
        style="@style/clockDigit"
        android:text="2"
        app:layout_constraintCircleAngle="60" />

    <TextView
        style="@style/clockDigit"
        android:text="3"
        app:layout_constraintCircleAngle="90" />

    <TextView
        style="@style/clockDigit"
        android:text="4"
        app:layout_constraintCircleAngle="120" />

    <TextView
        style="@style/clockDigit"
        android:text="5"
        app:layout_constraintCircleAngle="150" />

    <TextView
        android:id="@+id/textView"
        style="@style/clockDigit"
        android:text="6"
        app:layout_constraintCircleAngle="180"
        tools:layout_editor_absoluteX="242dp"
        tools:layout_editor_absoluteY="215dp" />

    <TextView
        android:id="@+id/textView2"
        style="@style/clockDigit"
        android:text="7"
        app:layout_constraintCircleAngle="220"
        tools:layout_editor_absoluteX="184dp"
        tools:layout_editor_absoluteY="62dp" />

    <TextView
        style="@style/clockDigit"
        android:text="8"
        app:layout_constraintCircleAngle="250" />

    <TextView
        style="@style/clockDigit"
        android:text="9"
        app:layout_constraintCircleAngle="270" />

    <TextView
        style="@style/clockDigit"
        android:text="10"
        app:layout_constraintCircleAngle="300" />

    <TextView
        style="@style/clockDigit"
        android:text="11"
        app:layout_constraintCircleAngle="330" />

    <TextView
        style="@style/clockDigit"
        android:text="12"
        app:layout_constraintCircleAngle="360" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="332dp" />

</androidx.constraintlayout.widget.ConstraintLayout>